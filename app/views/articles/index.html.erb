
<ul>
  <% @articles.each do |a| %>
  <li>
    <h3>
      <%= link_to a.title, article_path(a.id) %>
      <%= link_to image_tag("edit.png", width: 18), edit_article_path(a.id), method: :get %>
      <%= link_to image_tag("delete.png", width: 18), article_path(a.id), method: :delete %>
    </h3>
    <%  krammed = Kramdown::Document.new(a.content).to_html.html_safe %>
    <%= krammed %>
  </li>
  <% end %>
</ul>



